        }
    },
    "installer": {
        "args": "/quiet"
    },
    "uninstaller": {
        "script": [
            "$uninstall_exe = (Get-ItemProperty 'HKLM:\\SOFTWARE\\Microsoft\\Windows\\CurrentVersion\\Uninstall\\*').Where({ $_.DisplayName -eq 'Logitech G HUB' }).UninstallString",
            "if ($uninstall_exe) {",
            "   Start-Process $uninstall_exe -ArgumentList '/uninstall /quiet' -Wait",
            "} else {",
            "   Write-Host \"Logitech G HUB not found in registry.\"",
            "}"
        ]
    },
    "bin": "LGHUB.exe",
    "shortcuts": [
        [
            "LGHUB.exe",
            "LGHUB"
        ]
    ]
}
